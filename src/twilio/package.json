{
  "name": "corteza-ext-twilio",
  "description": "Corteza Official Twilio Extension",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "contributors": [
    "Toma≈æ Jerman <tomaz.jerman@crust.tech>"
  ],
  "private": false,
  "scripts": {
    "qa": "yarn lint; yarn test:unit",
    "lint": "eslint ./ --ext .js,.ts,.vue",
    "test:unit": "mocha corredor/**/",
    "test:unit:cc": "nyc mocha corredor/**/"
  },
  "dependencies": {
    "@cortezaproject/corteza-js": "^2020.3.0-alpha.7",
    "numeral": "^2.0.6",
    "twilio": "^3.39.2",
    "twilio-client": "^1.9.7"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.31",
    "babel": "^6.23.0",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "5.2.3",
    "esm": "^3.2.25",
    "flush-promises": "^1.0.2",
    "mocha": "^6.2.0",
    "mochapack": "^1.1.13",
    "nyc": "^14.1.1",
    "sinon": "^7.4.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3",
    "vue-loader": "^15.8.3",
    "webpack": "^4.41.5"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "functions": 90,
    "statements": 90,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "corredor/**/*.ts",
      "corredor/**/*.js",
      "corredor/**/*.vue"
    ],
    "exclude": [
      "**/*.test.js",
      "**/*.test.ts"
    ]
  }
}
